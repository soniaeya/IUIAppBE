MobileApp/
├─ app.json / app.config.ts
├─ package.json
├─ babel.config.js
├─ tsconfig.json
├─ android/ ios/            # native projects (bare RN)
├─ assets/                  # images, fonts, lottie, etc.
│  ├─ fonts/
│  └─ images/
├─ src/
│  ├─ app/                  # app shell & providers
│  │  ├─ navigation/        # navigators, linking config
│  │  ├─ providers/         # theme, query, state providers
│  │  ├─ store/             # Redux/Zustand (if used)
│  │  ├─ hooks/             # cross-app hooks (useOnline, useTheme)
│  │  ├─ config/            # env, constants, feature flags
│  │  └─ App.tsx            # entry (or index.ts)
│  ├─ features/             # domain/feature modules
│  │  ├─ auth/
│  │  │  ├─ screens/        # AuthScreen.tsx, LoginScreen.tsx
│  │  │  ├─ components/     # AuthForm.tsx, PasswordField.tsx
│  │  │  ├─ api/            # auth.api.ts (login, refresh)
│  │  │  ├─ hooks/          # useLogin.ts, useSession.ts
│  │  │  ├─ types/          # dto.ts, models.ts
│  │  │  └─ index.ts
│  │  ├─ home/
│  │  │  ├─ screens/
│  │  │  ├─ components/
│  │  │  ├─ hooks/
│  │  │  └─ index.ts
│  │  └─ ...
│  ├─ components/           # truly shared/presentational UI
│  │  ├─ Button/
│  │  │  ├─ Button.tsx
│  │  │  └─ index.ts
│  │  ├─ Text/
│  │  └─ ...
│  ├─ ui/                   # design system: theme, tokens, atoms
│  │  ├─ theme.ts
│  │  ├─ tokens.ts
│  │  └─ styles.ts
│  ├─ services/             # cross-cutting services (api, storage, analytics)
│  │  ├─ http.ts            # axios/fetch base with interceptors
│  │  ├─ storage.ts         # AsyncStorage wrapper, secure storage
│  │  ├─ analytics.ts
│  │  └─ notifications.ts
│  ├─ libs/                 # 3rd-party wrappers (date, i18n, form)
│  │  ├─ i18n/
│  │  ├─ form/
│  │  └─ date/
│  ├─ utils/                # pure helpers (formatters, validators)
│  ├─ types/                # global types
│  ├─ test/                 # test utils & mocks
│  └─ index.ts              # re-exports, root registry if desired
├─ __tests__/               # unit tests colocated or here
└─ e2e/                     # Detox (optional)
